    <input type="text" name="x" id="_x"> <br> <br>

    <label for="_y">y:</label>
    <input type="text" name="y" id="_y"> <br> <br>

    <label for="_orientacion">Orientacion:</label>
    <input type="text" name="orientacion" id="_orientacion"> <br> <br> <br>
    
    <input type="submit" value="Configurar"> 
</form>
